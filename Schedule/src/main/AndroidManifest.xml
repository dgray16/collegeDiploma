<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cvpc.schedule">

    <uses-permission android:name="android.permission.INTERNET">
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE">
    </uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE">
    </uses-permission>

//Main activity
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme"
        android:label="@string/full_app_name_ua">

        <activity
            android:name="com.cvpc.schedule.MainActivity"
            android:label="@string/main_app_name_ua"
            android:screenOrientation="portrait">
        </activity>
//About activity
        <activity
            android:name="com.cvpc.schedule.AboutActivity"
            android:label="@string/action_about_ua"
            android:screenOrientation="portrait">
        </activity>
        
//Time activity
        <activity android:name="com.cvpc.schedule.TimeActivity"
            android:label="@string/action_time_ua"
            android:screenOrientation="portrait">
        </activity>

//Authorization activity
        <activity android:name="com.cvpc.schedule.AuthorizationActivity"
            android:label="@string/action_authorization_ua"
            android:screenOrientation="portrait">
            <intent-filter android:label="@string/app_name_ua">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

    </application>




</manifest>
